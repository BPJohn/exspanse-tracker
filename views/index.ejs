<!DOCTYPE html>
<html ng-app= "exspenseApp">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div ng-controller = "fuelController">
      <h1><bold>{{message}}</bold></h1>
      Previous Odomiter in Miles :{{startingOdomiter}}
      <ul ng-repeat = "log in fuellogs">
        {{log.created_date|date:'MM/dd/yy hh:mm:ss'}}
        <li>odomiter:{{log.odomiter}}</li><li>Gallons: {{log.gallons}}</li><li>Cost:{{log.cost|currency}}</li>

      </ul>


      <form ng-submit = "logFuel()">
        <input type ="datetime-local"  step = "any" ng-model = "logDate"></input><br/>
      <input type = "number" step ="any" ng-model = "currentOdomiter" placeholder="Current Odomiter"></input></br>
      <input type ="number"  step ="any" ng-model = "qtyGallons" placeholder="Gallons"></input></br>
      <input type ="number"   step ="any" ng-model = "fuelCost" placeholder="Fuel Cost"></input><br/>


      <button type="submit">Submit</button><br/>

    </form>


    </div>

    <div ng-controller = "carController"><br/>
      <h1><bold>{{message}}</bold></h1>
      <form ng-submit = "createCar()">
        <input type = 'text' ng-model = "carMake" placeholder="Car Make"></input>   {{carMake}}<br/>
        <input type = 'text' ng-model = "carModel" placeholder="Car Model"></input>   {{carModel}}<br/>
        <input type = 'number' min ="1999" max ="2020" ng-model = "carYear" placeholder="Car Year"></input>  {{carYear}}<br/>
        <input type = 'number' min = "0" max = "100000" ng-model = "openMilage" placeholder="Starting Milage">  {{openMilage}}<br/>
        <button type="submit">Submit</button><br/>
      </form>




    </div>

  </body>
<div>
  <script  src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.js"></script>
  <script   src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-resource.js"></script>
  <script src="/js/app.js"></script>
 <script src="/js/controllers/fuel-controller.js"></script>
 <script src="/js/controllers/log-controllers.js"></script>
 <script src="/js/controllers/carController.js"></script>
</div>





</html>
